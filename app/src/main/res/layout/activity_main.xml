<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/participantId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:text="@string/prompt_participant_id" />

    <EditText
        android:id="@+id/studyId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:text="@string/prompt_study_id" />

    <Button
        android:id="@+id/start_collection_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/action_start_collection" />
</LinearLayout>